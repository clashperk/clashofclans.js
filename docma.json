{
    "src": [
        "./src/**/*.js",
        "./README.md"
    ],
    "assets": {
        "/": [
            "./.github/CNAME",
            "./assets/favicon.ico"
        ],
        "/assets": [
            "./assets/*.*"
        ]
    },
    "jsdoc": {
        "hierarchy": "true",
        "plugins": [
            "plugins/markdown"
        ]
    },
    "app": {
        "favicon": "./assets/favicon.ico",
        "title": "clashofclans.js.org",
        "entrance": "content:readme",
        "routing": "path",
        "server": "github",
        "base": "/",
        "meta": [
            {
                "name": "description",
                "content": "JavaScript library for interacting with the Clash of Clans API"
            },
            {
                "name": "title",
                "content": "clashofclans.js.org"
            },
            {
                "name": "theme-color",
                "content": "#5865f2"
            }
        ]
    },
    "markdown": {
        "sanitize": false
    },
    "template": {
        "options": {
            "title": {
                "label": "HOME",
                "href": "."
            },
            "logo": "./assets/logo.png",
            "navbar": {
                "enabled": true,
                "fixed": true,
                "dark": false,
                "animations": true,
                "menu": [
                    {
                        "label": "Documentation",
                        "href": "/api"
                    },
                    {
                        "iconClass": "fab fa-lg fa-github",
                        "label": "GitHub",
                        "href": "https://github.com/clashperk/clashofclans.js",
                        "target": "_blank"
                    }
                ]
            }
        }
    },
    "dest": "docs",
    "clean": true
}