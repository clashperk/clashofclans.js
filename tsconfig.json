{
	"compilerOptions": {
		"target": "ES2021",
		"module": "commonjs",
		"rootDir": "src",
		"resolveJsonModule": true,
		"declaration": true,
		"outDir": "dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"experimentalDecorators": true
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules"
	]
}