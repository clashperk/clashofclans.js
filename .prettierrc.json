{
    "semi": true,
    "tabWidth": 4,
    "printWidth": 140,
    "singleQuote": true,
    "quoteProps": "consistent",
    "bracketSpacing": true,
    "trailingComma": "none",
    "overrides": [
        {
            "files": ["*.md"],
            "options": {
                "useTabs": false,
                "tabWidth": 4
            }
        },
        {
            "files": ["*.yml"],
            "options": {
                "useTabs": false,
                "tabWidth": 2
            }
        }
    ]
}
